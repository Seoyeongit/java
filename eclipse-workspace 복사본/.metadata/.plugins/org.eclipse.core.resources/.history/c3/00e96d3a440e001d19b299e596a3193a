package p01.basic;

// 1. 비교연산자를 char를 사용할 경우는 unicode 값으로 비교
// 2.실수값들에 대하여 절대 비교연산자 사용하지 말 것(오차가 있기 때문)
public class RelationalOperatorEx2 {

	public static void main(String[] args) {
		char ch1 = 'A';
		char ch2 = 'B';
		
		boolean bResult = (ch1 < ch2);
		System.out.println( "bResult = " + bResult);
		
		double d1 = 0.1;
		float f1 = 0.1f;
		
		bResult = (d1 == f1);
		System.out.println("bResult = " + bResult);
		
		
		bResult = ( d1 == 0.1 );
		System.out.println("bResult = " + bResult);
		
		
		bResult = ( (float)d1 == f1 );
		System.out.println("bResult = " + bResult);
		

	}

}
