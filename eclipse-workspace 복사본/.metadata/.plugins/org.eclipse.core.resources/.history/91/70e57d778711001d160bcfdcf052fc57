package p07.break_continue;

public class BreakEx {

	public static void main(String[] args) {
		int num = 0;
		
		// 무한 loop
		while (true) { 
			num = (int)(Math.random()*6) + 1; // 1, 2, 3, 4, 5, 6
			System.out.println("주사위번호 = " + num);
			if (num == 6) {  // 조건식 역할
				break;
			}
		}
		System.out.println("주사위 게임 종료");
		
	}

}
